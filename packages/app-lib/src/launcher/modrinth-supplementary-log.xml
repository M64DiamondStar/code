<?xml version="1.0" encoding="UTF-8"?>
<Configuration xmlns="http://logging.apache.org/log4j/2.0/config" status="WARN">
  <Appenders>
    <File name="ServerJoinLog" fileName="logs/server_join_log.txt" immediateFlush="true">
      <Filters>
        <LevelMatchFilter level="INFO"/>
        <RegexFilter regex="^Connecting to .+, (?:[0-9]{1,5}|\{\})$" useRawMsg="true"/>
      </Filters>
      <PatternLayout pattern="%d{UNIX_MILLIS} %msg%n"/>
    </File>
  </Appenders>
  <Loggers>
    <Root level="INFO">
      <AppenderRef ref="ServerJoinLog"/>
    </Root>
  </Loggers>
</Configuration>
